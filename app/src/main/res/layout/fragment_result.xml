<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/play_background"
    android:layoutDirection="ltr"
    tools:context=".ui.play.levelsFragment.resultFragment">


    <ImageView
        android:id="@+id/result_img_avatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="86dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="49dp"
        android:background="@drawable/shape_avatar_pick_background"
        android:gravity="center"
        android:padding="1dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Username"
        android:textColor="#CC000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/result_name"
        app:layout_constraintStart_toStartOf="@+id/result_name" />

    <TextView
        android:id="@+id/result_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/shape_login_filed"
        android:gravity="center"
        android:hint="Name"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_img_avatar" />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="49dp"
        android:background="@drawable/shape_avatar_pick_background"
        android:gravity="center"
        android:padding="1dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Results"
        android:textColor="#CC000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/result_score"
        app:layout_constraintStart_toStartOf="@+id/result_score" />

    <TextView
        android:id="@+id/result_score"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/shape_login_filed"
        android:gravity="center"
        android:hint="Result"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_name" />

    <Button
        android:id="@+id/result_ok"
        android:layout_width="265dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/selector_play_button"
        android:text="Done"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_score" />

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/result_viewKonfetti"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>